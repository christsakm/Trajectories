+from __future__ import unicode_literals
+
+import os
+
+
+def detect_metric_type(path):
+    """
+    Automatically detect metric type based on file extension.
+    
+    Args:
+        path (str): Path to the metric file
+        
+    Returns:
+        str: Detected metric type (json, csv, tsv, or raw)
+    """
+    if not path:
+        return "raw"
+    
+    _, ext = os.path.splitext(path)
+    ext = ext.lower().lstrip('.')
+    
+    # Map file extensions to metric types
+    extension_map = {
+        'json': 'json',
+        'csv': 'csv', 
+        'tsv': 'tsv',
+    }
+    
+    return extension_map.get(ext, 'raw')
