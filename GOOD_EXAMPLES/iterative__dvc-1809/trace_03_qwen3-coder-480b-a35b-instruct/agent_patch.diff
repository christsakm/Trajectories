+def get_file_type(file_path):
+    """Detect file type based on file extension.
+    
+    Args:
+        file_path (str): Path to the file.
+        
+    Returns:
+        str: Detected file type or None if not recognized.
+    """
+    import os
+    
+    extension = os.path.splitext(file_path)[1].lower()
+    
+    if extension == ".json":
+        return "json"
+    elif extension == ".csv":
+        return "csv"
+    elif extension == ".tsv":
+        return "tsv"
+    elif extension == ".hcsv":
+        return "hcsv"
+    elif extension == ".htsv":
+        return "htsv"
+        
+    return None
